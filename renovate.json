{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":prHourlyLimitNone",
        ":prConcurrentLimitNone",
        "docker:pinDigests"
    ],
    "platformAutomerge": true,
    "docker": {
        "pinDigests": true
    },
    "packageRules": [
        {
            "matchUpdateTypes": [
                "minor",
                "patch",
                "pin",
                "digest"
            ],
            "automerge": true
        }
    ],
    "customManagers": [
        {
            "customType": "regex",
            "fileMatch": ["images/python-distroless/VARIANTS"],
            "matchStrings": ["(?<currentValue>\\d+\\.\\d+\\.\\d+)"],
            "datasourceTemplate": "docker",
            "depNameTemplate": "python",
            "versioningTemplate": "docker"
        },
        {
            "customType": "regex",
            "fileMatch": ["images/arc-runner-homelab-nix/VARIANTS"],
            "matchStrings": ["(?<currentValue>\\d+\\.\\d+\\.\\d+)"],
            "datasourceTemplate": "docker",
            "depNameTemplate": "ghcr.io/actions/actions-runner",
            "versioningTemplate": "docker"
        }
    ]
}
